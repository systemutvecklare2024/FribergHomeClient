@inject NavigationManager navigationManager

<style>
    .custom-card:hover {
        transform: scale(1.02); /* Slight zoom effect */
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3); /* Adds shadow */
    }
    .cursor-pointer:hover {
        cursor: pointer;
    }
</style>

<RadzenCard @onclick="NavigateTo" class="rz-my-3 rz-mx-auto cursor-pointer custom-card" Style="max-width: 420px">
    <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Gap="1rem" class="rz-p-4">
        <RadzenImage Path="@Agent?.ImageUrl" Style="width: 100px; height: 100px; border-radius: 50%;" />
        <RadzenStack Gap="0">
            <RadzenText TextStyle="TextStyle.Body1"><b>@(Agent?.FirstName + " " + Agent?.LastName)</b></RadzenText>
        </RadzenStack>
    </RadzenStack>
</RadzenCard>



@code {
    [Parameter]
    public RealEstateAgentsFromAgencyDTO? Agent { get; set; }

    void NavigateTo()
    {
        navigationManager.NavigateTo($"RealEstateAgents/{Agent.Id}/Profile");
    }
}

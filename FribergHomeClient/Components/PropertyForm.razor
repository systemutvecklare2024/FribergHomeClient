@using FribergHomeClient.Data
@using FribergHomeClient.Data.ViewModel
@using FribergHomeClient.Data.Dto

@if (Property == null)
{
    <p>Loading...</p>
}
else
{
    <EditForm Model="Property" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="p-1 grid gap-3">

            <div class="form-control">
                <label>Bostadstyp</label>
                <InputSelect @bind-Value="Property.PropertyType">
                    @foreach (var option in PropertyTypes.PropertyTypeList())
                    {
                        <option value="@option">@PropertyTypes.GetLocalized(option)</option>
                    }
                </InputSelect>
            </div>
            <div class="form-control">
                <label>Byggår</label>
                <InputNumber @bind-Value="Property.YearBuilt" />
            </div>
            <div class="form-control">
                <label>Adress</label>
                <InputText @bind-Value="Property.Street" />
            </div>
            <div class="form-control">
                <label>Ort</label>
                <InputText @bind-Value="Property.City" />
            </div>
            <div class="form-control">
                <label>Postnummer</label>
                <InputText @bind-Value="Property.PostalCode" />
            </div>
            <div class="form-control">
                <label>Boarea</label>
                <InputNumber @bind-Value="Property.LivingSpace" />
            </div>
            <div class="form-control">
                <label>Antal rum</label>
                <InputNumber @bind-Value="Property.NumberOfRooms" />
            </div>
            <div class="form-control">
                <label>Biarea</label>
                <InputNumber @bind-Value="Property.SecondaryArea" />
            </div>
            <div class="form-control">
                <label>Tomtarea</label>
                <InputNumber @bind-Value="Property.LotSize" />
            </div>
            <div class="form-control">
                <label>Månadskostnad</label>
                <InputNumber @bind-Value="Property.MonthlyFee" />
            </div>
            <div class="form-control">
                <label>Driftkostnad</label>
                <InputNumber @bind-Value="Property.OperationalCostPerYear" />
            </div>
            <div class="form-control">
                <label>Utgångspris</label>
                <InputNumber @bind-Value="Property.ListingPrice" />
            </div>
            <div class="form-control">
                <label>Beskrivning</label>
                <InputText @bind-Value="Property.Description" />
            </div>
            <div class="form-control">
                <label>Kommun</label>
                <InputNumber @bind-Value="Property.MuncipalityId" />
            </div>
            <div class="form-control">
                <label>Bild</label>
                <InputText @bind-Value="Property.ImageUrls" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Spara</button>
    </EditForm>
}
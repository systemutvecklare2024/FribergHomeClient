<RadzenRow JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center">
    <RadzenColumn Size="12" SizeMD="8" SizeXL="4">
        <RadzenCard Style="padding: 2rem; background: white; box-shadow: 0 2px 8px rgba(0,0,0,0.1); border-radius: 8px;">
            @if (!string.IsNullOrEmpty(Title))
            {
                <h2 class="rz-mt-0 rz-mb-4">@Title</h2>
            }

            @ChildContent
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public string Title { get; set; }
}
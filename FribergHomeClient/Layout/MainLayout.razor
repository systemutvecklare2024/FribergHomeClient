<RadzenComponents />
<RadzenLayout Style="position: relative;">
	<RadzenHeader>
		<div class="hamburger-container">
			<RadzenButton Icon="menu" Click="@(() => SidebarVisible = !SidebarVisible)" class="hamburger-btn" />
		</div>
		<RadzenNavMenu OnSidebarExpanded="Test" />
	</RadzenHeader>
	<AuthorizeView>
		<RadzenSiteDashboard SideBarVisible="@SidebarVisible" />
	</AuthorizeView>

	<RadzenBody>
		<div class="rz-p-4">
			@Body
		</div>
	</RadzenBody>

	<RadzenNotification />
	<RadzenSiteFooter />
</RadzenLayout>



<HeadContent>
	<RadzenTheme Theme="software" />
	<title>FribergHome</title>
	<PageTitle />
</HeadContent>


@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

@* //Author:Emelie *@

<RadzenComponents />
<RadzenLayout>
	<RadzenHeader>
		<RadzenNavMenu OnSidebarExpanded="Test" />
	</RadzenHeader>
	<AuthorizeView>

		<RadzenSidebar @bind-Expanded="IsSidebarExpanded" Responsive="false" Style="width: max-content">

			<RadzenSiteDashboard />
		</RadzenSidebar>
	</AuthorizeView>

	<RadzenBody>
		<div class="rz-p-4">
			@Body
		</div>
	</RadzenBody>

	<RadzenNotification />
	<RadzenSiteFooter />
</RadzenLayout>



<HeadContent>
	<RadzenTheme Theme="software" />
</HeadContent>

@code {
	private bool IsSidebarExpanded = true;

	private void Test(bool isExpanded)
	{
		IsSidebarExpanded = isExpanded;
	}
}


















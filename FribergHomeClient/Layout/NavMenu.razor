                <li class="nav-item">
                    <NavLink class="nav-link" href="/searchrealestateagent">Sök Mäklare</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/customerservice">Kundservice</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/login">Logga in</NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private string? NavBarCssClass => collapseNavMenu ? null : "show";

<div class="top-row ps-3 navbar navbar-dark" style="border-radius: 20px">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Dashboard</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard/myobjects" Match="NavLinkMatch.All">
                <span class="bi bi-house-nav-menu" aria-hidden="true"></span> Mina Objekt
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/dashboard/addproperty">
                <span class="bi bi-house-add-nav-menu" aria-hidden="true"></span> Lägga till ny bostad
            </NavLink>
        </div>
        @* Fredrik *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/dashboard/editproperty">
                <span class="bi bi-house-edit-nav-menu" aria-hidden="true"></span> Redigera bostad
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard/deleteproperty">
                <span class="bi bi-trash-nav-menu" aria-hidden="true"></span> Ta bort bostad
            </NavLink>
        </div>
        <hr />
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard/myprofile">
                <span class="bi bi-person-vcard-nav-menu" aria-hidden="true"></span> Min Profil
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard/agency">
                <span class="bi bi-houses-nav-menu" aria-hidden="true"></span> Märklarbyrå
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
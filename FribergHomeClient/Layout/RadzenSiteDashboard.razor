<RadzenPanelMenu DisplayStyle="@(SidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">
	<RadzenStack AlignItems="AlignItems.End" class="rz-p-2">
		@if (!SidebarExpanded)
		{
			<RadzenButton Icon="east" Variant="Variant.Text" ButtonStyle="ButtonStyle.Secondary" Click="@(() => SidebarExpanded = !SidebarExpanded)" />
		}
		<RadzenRow>
			<RadzenPanelMenuItem Text="Mina Objekt" Icon="home" Path="dashboard/myobjects" />
			@if (SidebarExpanded)
			{
				<RadzenButton Icon="west" Variant="Variant.Text" ButtonStyle="ButtonStyle.Secondary" Click="@(() => SidebarExpanded = !SidebarExpanded)" />
			}
		</RadzenRow>
	</RadzenStack>
	<RadzenPanelMenuItem Text="Lägg till ny bostad" Icon="add_home" Path="/dashboard/addproperty" />
	<RadzenPanelMenuItem Text="Min Profil" Icon="account_circle" Path="/dashboard/myprofile" />
	<RadzenPanelMenuItem Text="Mäklarbyrå" Icon="holiday_village" Path="/dashboard/agency" />
</RadzenPanelMenu>

@code {
	[Parameter]
	public bool SidebarExpanded { get; set; } = true;
}

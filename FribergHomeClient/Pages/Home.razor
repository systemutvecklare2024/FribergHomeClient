@page "/"
@inject DialogService DService
@inject NavigationManager NavManager
<PageTitle>Home</PageTitle>

@* Author: Glate *@

<h3>Landing Page</h3>

<SearchBar OnSearchMuncipality="HandleSearch"></SearchBar>

@* Change IsCompactView for large property cards instead *@
<ListPropertyCards Take=3
                   IsCompactView=true
                   InitialHeader="Nyheter">
</ListPropertyCards>

@code {

    private async Task HandleSearch(int muncipalityId)
    {
        if (muncipalityId != 0)
            NavManager.NavigateTo($"searchproperty/{muncipalityId}");
        else
            NavManager.NavigateTo($"searchproperty");
    }
}
